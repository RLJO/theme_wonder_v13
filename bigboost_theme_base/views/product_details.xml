                                    <div class="single-product-tables">
                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td>Febric</td>
                                                    <td>Chiffon</td>
                                                </tr>
                                                <tr>
                                                    <td>Color</td>
                                                    <td>Red</td>
                                                </tr>
                                                <tr>
                                                    <td>Material</td>
                                                    <td>Crepe printed</td>
                                                </tr>
